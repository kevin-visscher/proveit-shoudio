<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:controllers="nl.hva.proveit.shoudio.controllers.*">

    <fx:Script>
        <![CDATA[
        /**
         * Url to a media file (wav, mp3, etc.)
         */
        [Bindable]
        public var source:String;
        ]]>
    </fx:Script>

    <fx:Declarations>
        <controllers:ShoudioPlayerController id="controller" view="{this}" source="{source}"/>
    </fx:Declarations>

    <s:states>
        <s:State name="default"/>
        <s:State name="playing"/>
    </s:states>

    <s:Button id="btnPlayPause"
              label="play"
              label.playing="pause"
              top="2"
              left="2"
              bottom="2"
              click="{controller.btnPlayPause_clickHandler()}"/>

    <s:Rect id="progress" width="0" height="16">
        <s:fill>
            <s:SolidColor color="0x0000FF"/>
        </s:fill>
    </s:Rect>

</s:Group>
