<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:controller="nl.hva.proveit.shoudio.controllers.*"
         xmlns:modestmaps="com.modestmaps.flex.*"
         creationComplete="{controller.init()}">

    <fx:Declarations>
        <controller:MapController id="controller" view="{this}" map="{mapComponent.map}"/>
    </fx:Declarations>

    <modestmaps:MapComponent id="mapComponent"
                             provider="OPEN_STREET_MAP"
                             width="{width}"
                             height="{height}"
                             zoom="17"/>

    <!-- 0xA9 is the hex code for the copyright symbol -->
    <s:Label text="{String.fromCharCode(0xA9)} OpenStreetMap"
             fontFamily="Lucida Sans Unicode"
             fontSize="10"
             fontWeight="bold"
             color="0x333333"
             alpha=".8"
             bottom="2"
             right="2"/>

</s:Group>