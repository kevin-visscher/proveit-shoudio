<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:controllers="nl.hva.proveit.shoudio.controllers.*"
         creationComplete="{controller.init()}">

    <fx:Declarations>
        <controllers:ImagePlayerController id="controller" view="{this}"/>
        <fx:String id="imageSource"/>
    </fx:Declarations>

    <s:Button id="btnClose"
              label="Close"
              click="{controller.btnClose_clickHandler()}"/>

    <s:Image id="image"
             source="{imageSource}"
             ready="{controller.image_readyHandler(event)}"/>
</s:Group>
