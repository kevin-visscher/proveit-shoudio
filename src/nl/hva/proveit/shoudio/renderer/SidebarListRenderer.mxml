<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                height="24">

    <s:states>
        <s:State name="normal"/>
        <s:State name="hovered"/>
        <s:State name="selected"/>
    </s:states>

    <s:Rect top="0" right="0" bottom="0" left="0" includeIn="hovered">
        <s:fill>
            <s:LinearGradient rotation="90">
                <s:GradientEntry color="0x5195CE"/>
                <s:GradientEntry color="0x005DB3"/>
            </s:LinearGradient>
        </s:fill>
    </s:Rect>

    <s:Graphic maskType="alpha" cacheAsBitmap="true" top="4" left="2">
        <s:Rect id="mass" width="16" height="16">
            <s:fill>
                <s:SolidColor color="0x000000"
                              color.hovered="0xFFFFFF"/>
            </s:fill>
        </s:Rect>
        <s:mask>
            <s:Group>
                <s:Image source="{data.icon}" cacheAsBitmap="true"/>
            </s:Group>
        </s:mask>
    </s:Graphic>

    <s:Label text="{data.text}"
             top="8"
             bottom="2"
             left="22"
             fontWeight="bold"
             color.hovered="0xFFFFFF"/>

</s:ItemRenderer>
